<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gnirt69.StreetFoodMaster.StandInfoActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_title"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/stand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:background="@android:drawable/editbox_background"
                android:hint="Name"/>
            <Spinner
                android:id="@+id/stand_foodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                />
            <EditText
                android:id="@+id/stand_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:background="@android:drawable/editbox_background"
                android:hint="Latitude"/>
            <EditText
                android:id="@+id/stand_lng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:background="@android:drawable/editbox_background"
                android:hint="Longitude"/>
            <Button
                android:id="@+id/stand_LatLng_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Location"/>
            <EditText
                android:id="@+id/stand_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:background="@android:drawable/editbox_background"
                android:hint="Street Address"/>
            <EditText
                android:id="@+id/stand_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:background="@android:drawable/editbox_background"
                android:hint="City"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/stand_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:background="@android:drawable/editbox_background"
                    android:hint="State"/>
                <EditText
                    android:id="@+id/stand_zipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:background="@android:drawable/editbox_background"
                    android:hint="Zip code"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/stand_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"/>
            <Button
                android:id="@+id/stand_Delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
